{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "assets": [
      "modules/email/templates/**/*"
    ],
    "watchAssets": true
  },
  "plugins": [
    {
      "name": "@nestjs/graphql",
      "options": {
        "introspectComments": true
      }
    }
  ]
}
