{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "../../../",
  "testEnvironment": "node",
  "testRegex": ".int-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@modules/(.*)$": "<rootDir>/src/modules/$1",
    "^@models/(.*)$": "<rootDir>/src/models/$1",
    "^@common/(.*)$": "<rootDir>/src/common/$1",
    "^@tests/(.*)$": "<rootDir>/src/_tests_/$1"
  }
}
